{
  "$schema": "./node_modules/@lunariajs/core/config.schema.json",
  "repository": {
    "name": "toakiryu/motion-plus-installer",
    "rootDir": "docs",
    "branch": "main"
  },
  "files": [
    {
      "location": "**/config.ts",
      "pattern": "@lang/@path",
      "type": "universal"
    },
    {
      "location": "**/*.md",
      "pattern": "@lang/@path",
      "type": "universal"
    }
  ],
  "defaultLocale": {
    "label": "日本語",
    "lang": "ja"
  },
  "locales": [
    {
      "label": "English",
      "lang": "en"
    }
  ],
  "outDir": ".vitepress/dist/_translations",
  "ignoreKeywords": ["lunaria-ignore"]
}
